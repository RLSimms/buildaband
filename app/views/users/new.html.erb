<h1>New User</h1>

<p><%= notice %></p>

<%= form_tag(users_url, method: 'post') do %>


  <div>
    <%= label_tag :username %><br />
    <%= text_field_tag :username %>
  </div>

  <div>
    <p>Favorite</p>
    <%= label_tag :band_id %><br />
    <%= select_tag(:band_id, options_from_collection_for_select(Band.all, :id, :name)) %>
  </div>


  <div>
    <%= submit_tag "Create User" %>
  </div>
<% end %>
