<h1>Members</h1>

<p class="btn"><%= link_to 'Add a New Member', new_member_url %></p>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Band</th>
      <th>Musician</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
  <% @members.each do |member| %>
    <tr>
      <td><%= member.band.name %></td>
      <td><%= member.musician.name %></td>

      <td><%= link_to 'Show', member_url(member) %></td>
      <td><%= link_to 'Edit', edit_member_url(member) %></td>
      <td><%= link_to 'Destroy', member_url(member), method: 'delete', data: { confirm: "Do you really want to delete this member?" } %></td>

    </tr>
  <% end %>
  </tbody>
</table>

