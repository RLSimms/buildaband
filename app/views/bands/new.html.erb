  <div>
    <%= label_tag :name %><br />
    <%= text_field_tag :name %>
  </div>

 <div>
    <%= label_tag :hometown %><br />
    <%= text_field_tag :hometown %>
  </div>

    <div>
    <%= label_tag :image %><br />
